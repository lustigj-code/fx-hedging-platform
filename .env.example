# FX Hedging Platform - Environment Variables

# Application
APP_NAME="FX Hedging Platform"
APP_VERSION="1.0.0"
DEBUG=True

# Database
# For development (SQLite):
DATABASE_URL=sqlite+aiosqlite:///./fx_hedging.db

# For production (PostgreSQL):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/fx_hedging

# Exchange Rate API
# Get free API key at: https://www.exchangerate-api.com/
EXCHANGERATE_API_KEY=your_api_key_here

# Open Exchange Rates (fallback)
# Get API key at: https://openexchangerates.org/
OPENEXCHANGERATES_API_KEY=your_api_key_here

# Bloomberg (future integration - for production)
BLOOMBERG_API_KEY=your_bloomberg_key_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Default Parameters
DEFAULT_PROTECTION_LEVEL=0.05
DEFAULT_TIME_TO_MATURITY_DAYS=90
HISTORICAL_VOLATILITY_DAYS=90
MONTE_CARLO_SIMULATIONS=10000
